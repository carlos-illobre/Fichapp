rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir acceso completo para la carpeta 'profilePhotos' a usuarios autenticados y administradores
    match /profilePhotos/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'ADMIN');
    }

    // Reglas para 'actasEmpresa'
    match /actasEmpresa/{userId}/{file=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'ADMIN');
    }

    // Bloquear el acceso a todos los documentos por defecto
    match /{document=**} {
      allow read, write: if false;
    }

    // Permitir acceso a la colecci√≥n "users" solo para el usuario autenticado
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Permitir acceso a "fiestas" solo para usuarios autenticados
    match /fiestas/{fiestaId} {
      allow read, write: if request.auth != null;
    }

    // Permitir acceso a "piezas" solo para usuarios autenticados
    match /piezas/{piezaId} {
      allow read, write: if request.auth != null;
    }

    // Permitir acceso a "impresoras" solo para usuarios autenticados
    match /impresoras/{impresoraId} {
      allow read, write: if request.auth != null;
    }

    // Permitir acceso a "admin-panel" solo a administradores
    match /admin-panel/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'ADMIN';
    }
  }
}
